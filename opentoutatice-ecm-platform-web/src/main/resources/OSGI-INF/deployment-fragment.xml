<?xml version="1.0"?>

<fragment version="1">

	<require>all</require>

	<extension target="faces-config#NAVIGATION">
		<navigation-case>
			<from-outcome>editor_link_search_document</from-outcome>
			<to-view-id>/editor_link_search_document.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</extension>

	<extension target="pages#PAGES">
	</extension>

	<extension target="application#MODULE">

		<module>
			<java>${bundle.fileName}</java>
		</module>

	</extension>

	<install>
		<unzip from="${bundle.fileName}" to="/">
			<include>nuxeo.war/**</include>
		</unzip>

		<!-- <unzip from="${bundle.fileName}" to="/nuxeo.war/" prefix="editor-mce">
			<include>editor-mce/tiny_mce/**</include>
		</unzip>

		<unzip from="${bundle.fileName}" to="/nuxeo.war/tiny_mce/"
			prefix="editor-mce/tinymce_language_pack">
			<include>editor-mce/tinymce_language_pack/**</include>
		</unzip> -->

		<unzip from="${bundle.fileName}" to="/nuxeo.war/tiny_mce/"
			prefix="editor-mce/custom">
			<include>editor-mce/custom/**</include>
		</unzip>  

		<!-- append l10n files -->
		<delete path="${bundle.fileName}.tmp" />
		<mkdir path="${bundle.fileName}.tmp" />

		<unzip from="${bundle.fileName}" to="${bundle.fileName}.tmp">
			<include>OSGI-INF/l10n/**</include>
		</unzip>

		<append from="${bundle.fileName}.tmp/OSGI-INF/l10n/messages_fr.properties"
			to="nuxeo.war/WEB-INF/classes/messages_fr.properties" addNewLine="true" />

		<delete path="${bundle.fileName}.tmp" />
	</install>

</fragment>
