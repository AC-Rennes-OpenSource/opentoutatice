	<extension target="faces-config#NAVIGATION">
		<!-- Navigation entre ecran creation et ecran edition webpage -->
        <navigation-case>
            <from-outcome>osivia_create_fragment_2</from-outcome>
            <to-view-id>osivia_edit_fragment.xhtml</to-view-id>
        </navigation-case>    
    
		
		<!-- Ecran confirmation webpage-->	
		<navigation-case>
			<from-outcome>done</from-outcome>
			<to-view-id>osivia_done.xhtml</to-view-id>
		</navigation-case>
	</extension>

	<extension target="pages#PAGES">
	</extension>

	<extension target="application#MODULE">

		<module>
			<java>${bundle.fileName}</java>
		</module>

	</extension>

	<install>
		<unzip from="${bundle.fileName}" to="/">
			<include>nuxeo.war/**</include>
			<include>nuxeo.war.webpage/**</include>
		</unzip>  
		<unzip from="${bundle.fileName}" to="/" prefix="webpage.nuxeo.war">
			<include>webpage.nuxeo.war/nuxeo.war/**</include>
		</unzip>  

		<!-- append l10n files -->
		<delete path="${bundle.fileName}.tmp" />
		<mkdir path="${bundle.fileName}.tmp" />

		<unzip from="${bundle.fileName}" to="${bundle.fileName}.tmp">
			<include>OSGI-INF/l10n/**</include>
		</unzip>

		<append from="${bundle.fileName}.tmp/OSGI-INF/l10n/messages_fr.properties"
			to="nuxeo.war/WEB-INF/classes/messages_fr.properties" addNewLine="true" />
	
		<append from="${bundle.fileName}.tmp/OSGI-INF/l10n/webpage/messages_fr.properties"
			to="nuxeo.war/WEB-INF/classes/messages_fr.properties" addNewLine="true" />
	
		<delete path="${bundle.fileName}.tmp" />
	</install>

</fragment>
