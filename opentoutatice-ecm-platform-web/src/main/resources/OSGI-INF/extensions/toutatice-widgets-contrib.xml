<?xml version="1.0"?>
<component name="fr.toutatice.ecm.platform.web.widgets">

	<require>org.nuxeo.ecm.platform.forms.layout.WebLayoutManager</require>

	<extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
		point="widgets">

		<!-- PostalSite, PortalPage widgets -->
		<widget name="title" type="text">
			<labels>
				<label mode="any">Titre</label>
			</labels>
			<translated>false</translated>
			<fields>
				<field>dc:title</field>
			</fields>
			<properties widgetMode="edit">
				<property name="styleClass">dataInputText</property>
				<property name="required">true</property>
				<property name="disabled">false</property>
			</properties>
		</widget>

		<widget name="description" type="textarea">
			<labels>
				<label mode="any">Description</label>
			</labels>
			<translated>false</translated>
			<fields>
				<field>dc:description</field>
			</fields>
			<properties widgetMode="edit">
				<property name="required">false</property>
				<property name="disabled">false</property>
			</properties>
		</widget>

		<widget name="picture" type="file">
			<labels>
				<label mode="any">Visuel</label>
			</labels>
			<translated>false</translated>
			<fields>
				<field>toutatice_navigation:picture</field>
				<field>toutatice_navigation:picture/filename</field>
			</fields>
		</widget>

		<widget name="summary_picture" type="summary_picture_type">
			<labels>
				<label mode="any">Visuel</label>
			</labels>
			<translated>false</translated>
			<fields>
				<field>toutatice_navigation:picture</field>
				<field>toutatice_navigation:picture/filename</field>
			</fields>
		</widget>

		<widget name="content" type="htmltext">
			<labels>
				<label mode="any">Contenu</label>
			</labels>
			<translated>false</translated>
			<fields>
				<field>webp:content</field>
			</fields>
		</widget>

		<widget name="summary_content" type="richtext_with_mimetype">
			<labels>
				<label mode="any">Contenu</label>
			</labels>
			<translated>false</translated>
			<fields>
				<field>webp:content</field>
			</fields>
			<properties mode="view">
				<property name="translatedHtml">
					#{noteActions.translateImageLinks(field_0)}
				</property>
				<property name="cssClass">note_content_block</property>
			</properties>
		</widget>


		<widget name="acaren_widget_preload_on_login" type="checkbox">
			<labels>
				<label mode="any">acaren.toutatice.preload.on.login</label>
			</labels>
			<helpLabels>
				<label mode="any">Une page dynamique sera créée lors de la connexion
					de l'utilisateur
				</label>
			</helpLabels>
			<translated>true</translated>
			<fields>
				<field>ttc:isPreloadedOnLogin</field>
			</fields>
			<properties widgetMode="any">
				<property name="required">false</property>
			</properties>
			<widgetModes>
				<mode value="any">#{nxu:test((currentDocument.hasFacet('WebView') or
					currentDocument.type == 'Workspace') and (currentUser.administrator
					or currentNuxeoPrincipal.isMemberOf('Administrators')),
					layout.mode, 'hidden')}
				</mode>
			</widgetModes>
		</widget>

		<widget name="acaren_widget_show_in_menu" type="checkbox">
			<labels>
				<label mode="any">acaren.toutatice.show.in.menu</label>
			</labels>
			<helpLabels>
				<label mode="any">
					Permet de définir si ce contenu sera un élément de
					menu pour la navigation dans le portail.
				</label>
			</helpLabels>
			<translated>true</translated>
			<fields>
				<field>ttc:showInMenu</field>
			</fields>
			<properties widgetMode="any">
				<property name="required">false</property>
			</properties>
			<widgetModes>
				<mode value="any">#{nxu:test(!currentDocument.hasFacet('WebView'),
					layout.mode, 'hidden')}
				</mode>
			</widgetModes>
		</widget>

		<widget name="acaren_widget_contextualize_internal_contents"
			type="checkbox">
			<labels>
				<label mode="any">acaren.toutatice.contextualize.internal.contents
				</label>
			</labels>
			<helpLabels>
				<label mode="any">
					Les contenus de l'espace de publication seront
					publiés automatiquement dans leur rubrique
				</label>
			</helpLabels>
			<translated>true</translated>
			<fields>
				<field>ttc:contextualizeInternalContents</field>
			</fields>
			<properties widgetMode="any">
				<property name="required">false</property>
			</properties>
			<widgetModes>
				<mode value="any">#{nxu:test(currentDocument.hasFacet('WebView') and
					(currentUser.administrator
					or
					currentNuxeoPrincipal.isMemberOf('Administrators')), layout.mode,
					'hidden')}
				</mode>
			</widgetModes>
		</widget>

		<widget name="acaren_widget_contextualize_external_contents"
			type="checkbox">
			<labels>
				<label mode="any">acaren.toutatice.contextualize.external.contents
				</label>
			</labels>
			<helpLabels>
				<label mode="any">
					Les contenus externes à l'espace de publication
					seront publiés automatiquement dans leur rubrique d'origine
				</label>
			</helpLabels>
			<translated>true</translated>
			<fields>
				<field>ttc:contextualizeExternalContents</field>
			</fields>
			<properties widgetMode="any">
				<property name="required">false</property>
			</properties>
			<widgetModes>
				<mode value="any">#{nxu:test(currentDocument.hasFacet('WebView') and
					(currentUser.administrator
					or
					currentNuxeoPrincipal.isMemberOf('Administrators')), layout.mode,
					'hidden')}
				</mode>
			</widgetModes>
		</widget>

		<widget name="acaren_widget_page_template" type="text">
			<labels>
				<label mode="any">acaren.toutatice.page.template</label>
			</labels>
			<helpLabels>
				<label mode="any">
					Permet de définir la façon dont seront organisées
					les boîtes / portlets dans la page.
				</label>
			</helpLabels>
			<translated>true</translated>
			<fields>
				<field>ttc:pageTemplate</field>
			</fields>
		</widget>

		<!-- template fils -->
		<widget name="acaren_widget_subpages_template" type="text">
			<labels>
				<label mode="any">acaren.toutatice.subpages.template</label>
			</labels>
			<helpLabels>
				<label mode="any">
					Permet de définir la façon dont seront organisées
					les boîtes / portlets dans les sous-pages.
				</label>
			</helpLabels>
			<translated>true</translated>
			<fields>
				<field>ttc:childrenPageTemplate</field>
			</fields>
		</widget>


		<widget name="acaren_widget_page_scope" type="selectOneDirectory">
			<labels>
				<label mode="any">acaren.toutatice.page.scope</label>
			</labels>
			<helpLabels>
				<label mode="any">
					Permet de définir un scope d'exécution pour la
					page.
				</label>
			</helpLabels>
			<translated>true</translated>
			<fields>
				<field>ttc:pageScope</field>
			</fields>
			<properties widgetMode="any">
				<property name="directoryName">pageScopes</property>
			</properties>
			<widgetModes>
				<mode value="any">#{nxu:test(currentUser.administrator or
					currentNuxeoPrincipal.isMemberOf('Administrators'), layout.mode,
					'hidden')}
				</mode>
			</widgetModes>
		</widget>

		<widget name="acaren_widget_tab_order" type="int">
			<labels>
				<label mode="any">acaren.toutatice.tab.order</label>
			</labels>
			<helpLabels>
				<label mode="any">
					Défini l'ordre d'affichage de l'onglet associé à
					cette page dans la liste des onglets existants
				</label>
			</helpLabels>
			<translated>true</translated>
			<fields>
				<field>ttc:tabOrder</field>
			</fields>
			<properties widgetMode="any">
				<property name="required">false</property>
			</properties>
			<widgetModes>
				<mode value="any">#{nxu:test(currentDocument.type == 'PortalSite' and
					(currentUser.administrator or
					currentNuxeoPrincipal.isMemberOf('Administrators')), layout.mode,
					'hidden')}
				</mode>
			</widgetModes>
		</widget>

		<!-- Widget "Mots-clés" -->
		<widget name="acaren_widget_subjects" type="template">
			<labels>
				<label mode="any">Mots-clés</label>
			</labels>
			<translated>false</translated>
			<fields>
				<field>ttc:keywords</field>
			</fields>
			<properties mode="any">
				<property name="template">
					/widgets/acaren_subjects_widget.xhtml
				</property>
			</properties>
			<widgetModes>
				<mode value="any">#{nxu:test(currentDocument.type != 'BlogSite' and
					(currentUser.administrator or
					currentNuxeoPrincipal.isMemberOf('Administrators')) ,
					layout.mode,
					'hidden')}
				</mode>
			</widgetModes>
		</widget>

	</extension>

	<extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
		point="widgettypes">

		<widgetType name="summary_picture_type">
			<configuration>
				<categories>
					<category>summary</category>
				</categories>
				<supportedModes>
					<mode>view</mode>
				</supportedModes>
			</configuration>
			<handler-class>
				org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
			</handler-class>
			<property name="template">
				/widgets/summary/toutatice_summary_image_widget.xhtml
			</property>
		</widgetType>

	</extension>

</component>