<?xml version="1.0"?>
<component name="fr.toutatice.ecm.platform.web.images.actions">

	<require>org.nuxeo.ecm.platform.actions.ActionService</require>

	<extension target="org.nuxeo.ecm.platform.actions.ActionService"
		point="actions">
		
		<!-- Action de recherche d'Images Nuxeo -->
		<action id="TOUTATICE_IMAGES_SEARCH_FROM_NUXEO" label="toutatice.command.in.nuxeo"
			type="fancybox">
			<category>TOUTATICE_IMAGES_SEARCH_FROM_NUXEO</category>
			<properties>
				<property name="iframe">#{baseURL}acaren_create_image_search_document_popup.faces?conversationId=#{org.jboss.seam.core.manager.currentConversationId}
				</property>
				<property name="onclick" />
			</properties>
		</action>
		
		<action id="SHOW_THUMBNAIL" type="widget" order="100">
			<category>SUMMARY_PANEL_LEFT</category>
			<properties>
				<property name="widgetName">acaren_widget_summary_current_document_vignette</property>
			</properties>
		</action>

	</extension>

</component>