<?xml version="1.0"?>
<component name="fr.toutatice.ecm.platform.web.images.filters">

	<require>org.nuxeo.ecm.platform.actions.ActionService</require>

	<extension target="org.nuxeo.ecm.platform.actions.ActionService"
		point="filters">
		
		<filter id="hasAttachedImages">
			 <rule grant="true">
				<schema>files</schema>
			</rule>
		</filter>

		<filter id="applyingImagesTabDocTypes">
			<rule grant="true">
				<type>Note</type>
				<type>PortalSite</type>
				<type>PortalPage</type>
			</rule>
		</filter>
						
	</extension>
	
</component>