<?xml version="1.0"?>
<component name="fr.toutatice.ecm.platform.web.images.filters">

	<require>org.nuxeo.ecm.platform.actions.ActionService</require>

	<extension target="org.nuxeo.ecm.platform.actions.ActionService"
		point="filters">
		
		<filter id="hasAttachedFiles">
			 <rule grant="true">
				<schema>files</schema>
			</rule>
		</filter>

		<filter id="canAttachImages">
			<rule grant="true">
				<facet>AttachableImages</facet>
			</rule>
		</filter>
						
	</extension>
	
</component>