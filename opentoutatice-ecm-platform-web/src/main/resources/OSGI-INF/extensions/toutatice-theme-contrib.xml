<?xml version="1.0"?>
<component name="fr.toutatice.ecm.platform.web.theme">

	<require>org.nuxeo.runtime.started</require>

	<extension target="org.nuxeo.theme.styling.service" point="pages">
		<themePage name="*">
			<styles append="true">
				<style>local-publishing</style>
				<style>images-tab</style>
			</styles>
			<resources>
      			<resource>nuxeo_link_js</resource>
      			<resource>nuxeo_image_upload_js</resource>
      		</resources> 
		</themePage>
	</extension>

	<extension target="org.nuxeo.theme.styling.service" point="styles">
		<style name="local-publishing">
			<src>themes/css/local-publishing.css</src>
		</style>
		<style name="images-tab">
			<src>themes/css/images-tab.css</src>
		</style>
	</extension>

	<extension target="org.nuxeo.theme.styling.service" point="resources">
		<resource name="nuxeo_link_js">
			<path>custom/nuxeolink/editor_plugin.js</path>
		</resource>
		<resource name="nuxeo_image_upload_js">
			<path>custom/nuxeoimageupload/editor_plugin.js</path>
		</resource>
	</extension>
</component>