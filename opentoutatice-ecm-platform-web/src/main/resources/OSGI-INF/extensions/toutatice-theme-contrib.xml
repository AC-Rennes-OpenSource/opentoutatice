<?xml version="1.0"?>
<component name="fr.toutatice.ecm.platform.web.theme">

	<require>org.nuxeo.theme.services.ThemeService</require>
	<require>org.nuxeo.theme.nuxeo.webapp</require>

	<!-- For all pages in BO -->
	<extension target="org.nuxeo.ecm.platform.WebResources"
		point="bundles">
		
		<bundle name="nuxeo_includes">
			<resources append="true">
				<resource>local-publishing.css</resource>
				<resource>images-tab.css</resource>
				<resource>opentoutatice.css</resource>
				<resource>glyphicons.css</resource>
			</resources>
		</bundle>
		
	</extension>

	<extension target="org.nuxeo.ecm.platform.WebResources" 
		point="resources">
		
		<resource name="local-publishing.css" type="css">
			<path>themes/css/local-publishing.css</path>
		</resource>
		<resource name="images-tab.css" type="css">
			<path>themes/css/images-tab.css</path>
		</resource>
		<resource name="opentoutatice.css" type="css">
			<path>themes/css/opentoutatice.css</path>
		</resource>
			<resource name="glyphicons.css">
			<uri>/css/glyphicons/css/glyphicons.css</uri>
		</resource>
		
	</extension>
	

