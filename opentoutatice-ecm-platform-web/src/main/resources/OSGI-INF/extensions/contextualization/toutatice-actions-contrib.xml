<?xml version="1.0"?>
<component name="fr.toutatice.ecm.platform.web.contextualization.actions">

	<require>org.nuxeo.ecm.platform.actions.ActionService</require>

	<extension target="org.nuxeo.ecm.platform.actions.ActionService"
		point="actions">
		
		<action id="ATAB_ADMIN_PUBLICATION_SPACE" link="/incl/tabs/acaren_admin_publication_space.xhtml"
			order="120" label="acaren.action.admin.publication.space" icon="/icons/file.gif">
			<category>VIEW_ACTION_LIST</category>
			<filter-id>belong_to_publish_space</filter-id>
			<filter-id>hasToutaticeSchema</filter-id>
			<filter-id>isGlobalAdministrator</filter-id>
			<filter id="filter@TTC_TAB_ADMIN_PUBLICATION_SPACE">
				<rule grant="true">
					<type>PortalSite</type>
					<type>PortalPage</type>
				</rule>
			</filter>
		</action> 
		
		<action id="show_in_menu" order="10" type="widget">
			<category>EDIT_DOCUMENT_FORM</category>
			<properties>
				<property name="widgetName">acaren_showInMenu_widget</property>
			</properties>
			<filter>
				<rule grant="false">
					<type>PortalSite</type>
				</rule>
			</filter>
		</action>
		
	</extension>

</component>