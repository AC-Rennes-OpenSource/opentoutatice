					</snapshots>
				</repository>
			</repositories>

			<build>
				<plugins>
					<plugin>
						<groupId>org.nuxeo.build</groupId>
						<artifactId>nuxeo-distribution-tools</artifactId>
						<version>1.15</version>
						<configuration>
							<buildFiles>
								<buildFile>${basedir}/src/main/assemble/assembly_PREPROD.xml</buildFile>
							</buildFiles>
