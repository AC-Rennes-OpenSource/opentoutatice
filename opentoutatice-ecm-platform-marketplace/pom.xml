				</plugins>
			</build>
		</profile>

		<profile>
			<id>PROD</id>

			<properties>
				<profileName>PROD</profileName>
			</properties>

			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>

			<repositories>
				<repository>
					<id>private-releases</id>
					<url>http://projet.toutatice.fr/nexus/content/repositories/toutatice-releases</url>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
