<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.nuxeo.ecm.distribution</groupId>
		<artifactId>nuxeo-distribution</artifactId>
		<version>5.8.0-HF19</version>
	</parent>
 
	<artifactId>opentoutatice-ecm-platform-marketplace</artifactId>
	<version>2.0.0-SNAPSHOT</version>
	<packaging>zip</packaging>
	<name>Marketplace package - Open Toutatice platform</name>

	<properties>
		<opentoutatice.version>2.0.0-SNAPSHOT</opentoutatice.version>
	</properties>

	<dependencies>
		<!-- Base distribution(s) for the MP -->
		<dependency>
			<groupId>org.nuxeo.ecm.distribution</groupId>
			<artifactId>nuxeo-distribution-dm</artifactId>
			<type>pom</type>
		</dependency>

		<!-- Additional bundles to be deployed by the MP -->
		<dependency>
			<groupId>opentoutatice-ecm.platform</groupId>
			<artifactId>opentoutatice-ecm-platform-core</artifactId>
			<version>${opentoutatice.version}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>opentoutatice-ecm.platform</groupId>
			<artifactId>opentoutatice-ecm-platform-automation</artifactId>
			<version>${opentoutatice.version}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>opentoutatice-ecm.platform</groupId>
			<artifactId>opentoutatice-ecm-platform-services</artifactId>
			<version>${opentoutatice.version}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>opentoutatice-ecm.platform</groupId>
			<artifactId>opentoutatice-ecm-platform-web</artifactId>
			<version>${opentoutatice.version}</version>
			<type>jar</type>
		</dependency>
	</dependencies>
	
	<profiles>

		<profile>
			<id>DEV</id>

			<properties>
				<profileName>DEV</profileName>
			</properties>

			<repositories>
				<repository>
					<id>private-releases</id>
					<url>http://projet.toutatice.fr/nexus/content/repositories/toutatice-releases</url>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
				</repository>
				<repository>
					<id>private-snapshots</id>
					<url>http://projet.toutatice.fr/nexus/content/repositories/toutatice-snapshots</url>
					<releases>
						<enabled>false</enabled>
					</releases>
					<snapshots>
						<enabled>true</enabled>
						<updatePolicy>always</updatePolicy>
					</snapshots>
				</repository>
			</repositories>

			<build>
				<plugins>
					<plugin>
						<groupId>org.nuxeo.build</groupId>
						<artifactId>nuxeo-distribution-tools</artifactId>
						<version>1.15</version>
						<configuration>
							<buildFiles>
								<buildFile>${basedir}/src/main/assemble/assembly_DEV.xml</buildFile>
							</buildFiles>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>INT</id>

			<properties>
				<profileName>INT</profileName>
			</properties>

			<repositories>
				<repository>
					<id>private-releases</id>
					<url>http://projet.toutatice.fr/nexus/content/repositories/toutatice-releases</url>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
				</repository>
				<repository>
					<id>private-snapshots</id>
					<url>http://projet.toutatice.fr/nexus/content/repositories/toutatice-snapshots</url>
					<releases>
						<enabled>false</enabled>
					</releases>
					<snapshots>
						<enabled>true</enabled>
						<updatePolicy>always</updatePolicy>
					</snapshots>
				</repository>
			</repositories>

			<build>
				<plugins>
					<plugin>
						<groupId>org.nuxeo.build</groupId>
						<artifactId>nuxeo-distribution-tools</artifactId>
						<version>1.15</version>
						<configuration>
							<buildFiles>
								<buildFile>${basedir}/src/main/assemble/assembly_INT.xml</buildFile>
							</buildFiles>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>QUALIF</id>

			<properties>
				<profileName>QUALIF</profileName>
			</properties>

			<repositories>
				<repository>
					<id>private-releases</id>
					<url>http://projet.toutatice.fr/nexus/content/repositories/toutatice-releases</url>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
				</repository>
				<repository>
					<id>private-snapshots</id>
					<url>http://projet.toutatice.fr/nexus/content/repositories/toutatice-snapshots</url>
					<releases>
						<enabled>false</enabled>
					</releases>
					<snapshots>
						<enabled>true</enabled>
						<updatePolicy>always</updatePolicy>
					</snapshots>
				</repository>
			</repositories>

			<build>
				<plugins>
					<plugin>
						<groupId>org.nuxeo.build</groupId>
						<artifactId>nuxeo-distribution-tools</artifactId>
						<version>1.15</version>
						<configuration>
							<buildFiles>
								<buildFile>${basedir}/src/main/assemble/assembly_QUALIF.xml</buildFile>
							</buildFiles>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>PREPROD</id>

			<properties>
				<profileName>PREPROD</profileName>
			</properties>

			<repositories>
				<repository>
					<id>private-releases</id>
					<url>http://projet.toutatice.fr/nexus/content/repositories/toutatice-releases</url>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
				</repository>
				<repository>
					<id>private-snapshots</id>
					<url>http://projet.toutatice.fr/nexus/content/repositories/toutatice-snapshots</url>
					<releases>
						<enabled>false</enabled>
					</releases>
					<snapshots>
						<enabled>true</enabled>
						<updatePolicy>always</updatePolicy>
					</snapshots>
				</repository>
			</repositories>

			<build>
				<plugins>
					<plugin>
						<groupId>org.nuxeo.build</groupId>
						<artifactId>nuxeo-distribution-tools</artifactId>
						<version>1.15</version>
						<configuration>
							<buildFiles>
								<buildFile>${basedir}/src/main/assemble/assembly_PREPROD.xml</buildFile>
							</buildFiles>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>PROD</id>

			<properties>
				<profileName>PROD</profileName>
			</properties>

			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>

			<repositories>
				<repository>
					<id>private-releases</id>
					<url>http://projet.toutatice.fr/nexus/content/repositories/toutatice-releases</url>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
				</repository>
				<repository>
					<id>private-snapshots</id>
					<url>http://projet.toutatice.fr/nexus/content/repositories/toutatice-snapshots</url>
					<releases>
						<enabled>false</enabled>
					</releases>
					<snapshots>
						<enabled>true</enabled>
						<updatePolicy>always</updatePolicy>
					</snapshots>
				</repository>
			</repositories>

			<build>
				<plugins>
					<plugin>
						<groupId>org.nuxeo.build</groupId>
						<artifactId>nuxeo-distribution-tools</artifactId>
						<version>1.15</version>
						<configuration>
							<buildFiles>
								<buildFile>${basedir}/src/main/assemble/assembly_PROD.xml</buildFile>
							</buildFiles>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

	</profiles>

	<distributionManagement>
		<repository>
			<id>toutatice-releases</id>
			<url>http://projet.toutatice.fr/nexus/content/repositories/toutatice-releases</url>
		</repository>
		<snapshotRepository>
			<id>toutatice-snapshots</id>
			<url>http://projet.toutatice.fr/nexus/content/repositories/toutatice-snapshots</url>
		</snapshotRepository>
	</distributionManagement>
</project>
