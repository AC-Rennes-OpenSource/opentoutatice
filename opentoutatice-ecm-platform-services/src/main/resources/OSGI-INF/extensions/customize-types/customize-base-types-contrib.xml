<?xml version="1.0"?>

<component name="fr.toutatice.ecm.platform.customize.base.types">

	<require>org.nuxeo.ecm.core.schema.CustomizeTypesService
	</require>
	<require>fr.toutatice.ecm.platform.core.doctypes</require>
	<require>fr.toutatice.ecm.platform.core.schemas</require>
	<require>fr.toutatice.ecm.platform.customize.base.rules.types</require>
	<require>fr.toutatice.ecm.platform.services.doctypes</require>

	<extension
		target="org.nuxeo.ecm.core.schema.CustomizeTypesService"
		point="basettc">

		<doctype name="*" append="true">
			<schema name="uid" />
			<schema name="toutatice" />
			<facet name="Versionable" />
		</doctype>

	</extension>

	<extension target="org.nuxeo.ecm.core.schema.TypeService"
		point="doctype">

		<proxies>
			<schema name="toutatice_remote_proxy" />
		</proxies>

		<doctype name="Workspace" append="true">
			<facet name="Space" />
		</doctype>
		
		<doctype name="PictureBook" append="true">
			<facet name="SpaceContent" />
		</doctype>

		<doctype name="Domain" append="true">
			<facet name="Space" />
		</doctype>

	</extension>

</component>