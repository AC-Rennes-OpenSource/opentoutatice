<?xml version="1.0"?>

<component name="fr.toutatice.ecm.platform.core.doctypes.contrib">

	<require>fr.toutatice.ecm.platform.services.doctypes</require>

	<extension target="org.nuxeo.ecm.core.schema.TypeService"
		point="doctype">
			
		<doctype name="TemplateRoot" append="true">
			<facet name="Space" />
			<schema name="toutatice_space" />
		</doctype>

	</extension>
	
	<extension target="org.nuxeo.ecm.platform.types.TypeService"
		point="types">
		
		<type id="TemplateRoot">
			<subtypes>
				<type>PortalSite</type>
			</subtypes>
		</type>
		
	</extension>

</component>
