<?xml version="1.0"?>
<component name="fr.toutatice.ecm.platform.web.rights.filters">

	<require>org.nuxeo.ecm.platform.actions.ActionService</require>

	<extension target="org.nuxeo.ecm.platform.actions.ActionService"
		point="filters">
		
		<!-- Permet l'ajout de l'onglet "Droits" sur un document feuille -->
