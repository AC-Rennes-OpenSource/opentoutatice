<?xml version="1.0"?>
<component name="fr.toutatice.ecm.platform.core.jbpm">

	<require>org.nuxeo.ecm.platform.jbpm.core.JbpmService</require>
	<require>org.nuxeo.ecm.platform.jbpm.defaultContribs</require>

	<extension target="org.nuxeo.ecm.platform.jbpm.core.JbpmService"
		point="processDefinition">

		<processDefinition path="process/toutatice-online-review.xml"
			deployer="nuxeoProperties" />

	</extension>

	<extension target="org.nuxeo.ecm.platform.jbpm.core.JbpmService"
		point="securityPolicy">

		<securityPolicy class="org.nuxeo.ecm.platform.jbpm.core.service.DefaultJbpmSecurityPolicy"
			for="touatice_online_approbation" />

	</extension>

	<extension target="org.nuxeo.ecm.platform.jbpm.core.JbpmService"
		point="typeFilter">

		<type name="PortalSite">
			<!-- FIXME: inutile? -->
			<processDefinition>review_parallel</processDefinition>
			<processDefinition>review_approbation</processDefinition>
		</type>
		<type name="PortalPage">
			<!-- FIXME: inutile? -->
			<processDefinition>review_parallel</processDefinition>
			<processDefinition>review_approbation</processDefinition>
		</type>

	</extension>

</component>