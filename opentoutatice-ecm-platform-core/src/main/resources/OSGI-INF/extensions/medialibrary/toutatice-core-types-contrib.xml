<?xml version="1.0"?>

<component name="fr.toutatice.ecm.platform.core.medialibrary.doctypes">

	<require>org.nuxeo.ecm.core.schema.TypeService</require>
	
	<extension target="org.nuxeo.ecm.core.schema.TypeService"
		point="doctype">


		<doctype name="MediaLibrary" extends="Document">
            <schema name="common" />
            <schema name="dublincore" />
            <schema name="toutatice" />
            <facet name="Folderish" />
            <facet name="Orderable" />
		</doctype>

	</extension>
	
	<extension target="org.nuxeo.ecm.platform.types.TypeService"
		point="types">

		<type id="MediaLibrary">
            <label>MediaLibrary</label>
            <icon>/img/book-review-icon.gif</icon>
            <bigIcon>/img/book-review-icon.gif</bigIcon>
            <description>MediaLibrary.description</description>
            <default-view>view_documents</default-view>        
			<subtypes>
				<type>Folder</type>
                <type>File</type>
                <type>PictureBook</type>
                <type>Picture</type>
			</subtypes>
            <layouts mode="create">
            <layout>heading</layout>
            </layouts>
            <layouts mode="edit">
                <layout>heading</layout>
            </layouts>
            <layouts mode="view" />
            <contentViews category="content">
                <contentView showInExportView="false">orderable_document_content
                </contentView>
            </contentViews>
            <contentViews category="trash_content">
                <contentView showInExportView="false">document_trash_content
                </contentView>
            </contentViews>
		</type>
		
	</extension>

</component>
