  <extension target="org.nuxeo.ecm.core.schema.TypeService"
    point="schema">
    
    <schema name="ottc_extended_userprofile" src="schemas/toutatice-extended-userprofile.xsd"
      prefix="ottceup" />
      
  </extension>

  <extension target="org.nuxeo.ecm.core.schema.TypeService"
    point="doctype">
    
    <facet name="OttcExtendedUserProfile">
      <schema name="ottc_extended_userprofile" />
    </facet>

    <doctype name="UserProfile" appends="true">
      <facet name="OttcExtendedUserProfile" />
    </doctype>

  </extension>

