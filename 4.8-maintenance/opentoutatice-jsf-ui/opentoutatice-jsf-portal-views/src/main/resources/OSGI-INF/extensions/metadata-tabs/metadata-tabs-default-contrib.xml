<component name="org.opentoutatice.portal.view.metadata.tab.default.contrib">

	<require>org.opentoutatice.portal.view.metadata.tab.service.MetadataTabsService
	</require>
	<require>fr.toutatice.ecm.platform.web.widgets</require>

	<extension
		target="org.opentoutatice.portal.view.metadata.tab.service.MetadataTabsService"
		point="contentTab">

		<tab titlekey="content.tab.label">
			<excludedWidgets>
				<widget>rights</widget>
				<widget>source</widget>
				<widget>created</widget>
				<widget>modified</widget>
				<widget>format</widget>
				<widget>language</widget>
				<widget>expired</widget>
				<widget>author</widget>
				<widget>contributors</widget>
				<widget>lastContributor</widget>
			</excludedWidgets>
		</tab>

	</extension>

	<extension
		target="org.opentoutatice.portal.view.metadata.tab.service.MetadataTabsService"
		point="metadataTabs">

		<tabs id="default">
			<tab name="metadata" titleKey="metadata.tab.label">
				<group name="flow" titleKey="metadata.tab.group.flow.label">
					<widgets>
						<widget>description</widget>
						<widget>add_thumbnail</widget>
						<widget>publication_date</widget>
						<widget>metadata_comments_forbidden</widget>
						<widget>metadata_metadatas_hidden</widget>
					</widgets>
				</group>
				<group name="ranking" titleKey="metadata.tab.group.ranking.label">
					<widgets>
						<widget>nature</widget>
						<widget>subjects</widget>
						<widget>coverage</widget>
						<widget>toutatice_keywords_widget</widget>
					</widgets>
				</group>
				<group name="share" titleKey="metadata.tab.group.share.label">
					<widgets>
						<widget>toutatice_webId_widget</widget>
					</widgets>
				</group>
				<group name="navigation" titleKey="metadata.tab.group.navigation.label">
					<widgets>
						<!-- <widget>ottc_weburl</widget> -->
						<widget>toutatice_showInMenu_widget</widget>
					</widgets>
				</group>
			</tab>
		</tabs>

	</extension>

</component>