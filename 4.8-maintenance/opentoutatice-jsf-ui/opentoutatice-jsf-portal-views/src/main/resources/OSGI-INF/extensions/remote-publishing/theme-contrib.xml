<?xml version="1.0"?>
<component name="org.opentoutatice.web.portal.views.theme">

	<require>fr.toutatice.ecm.platform.web.theme</require>

	<extension target="org.nuxeo.theme.styling.service" point="pages">

		<page name="rp-portal-view" charset="utf-8">
			<defaultFlavor>default</defaultFlavor>
			<resources>
				<bundle>nuxeo_includes</bundle>
				<bundle>nuxeo_sassCss</bundle>
				<resource>portal-view.min.css</resource>
				<resource>pv-remote-publishing.css</resource>
			</resources>
		</page>

	</extension>

	<extension target="org.nuxeo.ecm.platform.WebResources"
		point="resources">

		<resource name="pv-remote-publishing.css">
			<uri>/css/remote-publishing/pv-remote-publishing.css</uri>
		</resource>

	</extension>

</component>