<?xml version="1.0"?>
<component name="fr.toutatice.ecm.platform.web.maintenance.layouts.webapp">

	<require>org.nuxeo.ecm.platform.forms.layout.WebLayoutManager</require>
	<require>fr.toutatice.ecm.platform.web.maintenance.widgets</require>

	<extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
		point="layouts">

		<layout name="layout@MaintenanceConfiguration">
			<templates>
				<template mode="any">/layouts/layout_default_template.xhtml</template>
			</templates>
			<rows>
				<row>
					<widget>maintenance_title</widget>
				</row>
				<row>
					<widget>maintenance_description</widget>
				</row>
			</rows>
		</layout>

	</extension>

</component>