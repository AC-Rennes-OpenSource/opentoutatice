<?xml version="1.0"?>
<component name="fr.toutatice.ecm.platform.portalviews.theme">

	<require>org.nuxeo.theme.services.ThemeService</require>
	<require>org.nuxeo.theme.styling.service</require>

	<extension target="org.nuxeo.theme.services.ThemeService"
		point="applications">

		<application root="${org.nuxeo.ecm.contextPath}" template-engine="jsf-facelets">
			<negotiation>
				<strategy>nuxeo5</strategy>
				<default-engine>default</default-engine>
				<default-theme>galaxy/default</default-theme>
				<default-perspective>default</default-perspective>
			</negotiation>
			<view id="/toutatice_view_documents.xhtml">
				<theme>galaxy/popup</theme>
			</view>
			<view id="/toutatice_edit_document.xhtml">
				<theme>galaxy/popup</theme>
			</view>
			<view id="/toutatice_create_document.xhtml">
				<theme>galaxy/popup</theme>
			</view>
		</application>

	</extension>
	
	<extension target="org.nuxeo.theme.styling.service" point="pages">
		<themePage name="galaxy/popup">
			<styles append="true">
				<style>toutatice-popup</style>
			</styles>
		</themePage>
	</extension>

	<extension target="org.nuxeo.theme.styling.service" point="styles">
		<style name="toutatice-popup">
			<src>themes/css/toutatice-popup.css</src>
		</style>
	</extension>

</component>